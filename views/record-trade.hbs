  <section>
  <div class="fixed">
    <h2>Requested Record</h2>
    <ul class="request detail">
      <li class="cover">
          <div>
            <img src="{{requestedRecord.coverImageURL}}" alt="">
          </div>

      </li>
      <li class="info">
          <div>
            <h3>{{requestedRecord.name}}</h3>
            <h4>{{requestedRecord.artist}}</h4>
            {{!-- <p>{{requestedRecord.releaseYear}}</p> --}}
          </div>

      </li>
    </ul>
  </div>
 
  <h2>Select a record you want to trade</h2>
  <hr>
  {{#unless myRecords.length}}
  <h4>Dude you have no records to trade <a class"button" href="/profile">create one</a> first!</h4>
  {{/unless}}
  <ul class="select-list">
    {{#each myRecords }}
    <li class="select">
      <div class="cover">
        <img src="{{this.coverImageURL}}" alt="">
      </div>
      <div class="info">
        <h3>{{this.name}}</h3>
        <h3>{{this.artist}}</h3>
        <form action="/records/{{../requestedRecord.id}}/{{this.id}}/request" method="POST">
          <button class="button select">Offer</button>
        </form>
      </div>
    </li>
    {{/each}}
  </ul>

  </section>

