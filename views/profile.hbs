<h1>Hello, <br> <strong>{{currentUser.username}}</strong>!</h1>
<h3>Welcome to your profile.</h3>

<section>

    <div class="buttons">
        <ul class="flex">
            <li class="element">
            <a class="button invert" href="/profile/inbox">Inbox</a>
            </li>
            <li class="element">
            <a class="button invert" href="/profile/requests">Outbox</a>
            </li>
        </ul>
        <a href="/records/create" class="button">Add a record</a>
    </div>


    <h2>Your records</h2>
    <hr>

    <ul class="record-list">
        {{#each records}}
            <li class="record">
            <a href="/records/{{this.id}}">
                <div>
                <img src="{{this.coverImageURL}}" alt="">
                </div>
                <div class="record-info">
                <h3>{{this.name}}</h3>
                    <h4>{{this.artist}}</h4>
                    <p>{{this.condition}}, {{this.releaseYear}}</p>
                </div>
            </a>  
            </li>
        {{/each}}
    </ul>

</section>
