          </div>
          <div class="req-element">
            {{#approved this.status}}
              <div class="req-element">
                <h4>Status:</h4>
                <img src="/images/approved-icon.png" alt="">
              </div>
            {{/approved}}
          </div>
        </div>
      </li>
    {{/approved}}
  {{/each }}
</ul>
